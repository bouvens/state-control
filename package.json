{
  "name": "state-control",
  "version": "2.0.4",
  "description": "Small npm package for simple changing state of React components",
  "main": "lib/index.js",
  "files": [
    "src",
    "lib"
  ],
  "size-limit": [
    {
      "path": "lib/index.js"
    }
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --hot",
    "build": "cross-env NODE_ENV=production webpack",
    "build:watch": "webpack --watch",
    "deploy": "yarn run build && gh-pages -d demo/dist",
    "size": "size-limit",
    "eslint": "eslint --ext .js,.jsx -f checkstyle -o ./reports/js.checkstyle.xml ./src ./demo/src",
    "eslint:html": "eslint --ext .js,.jsx -f html -o ./reports/eslint.checkstyle.html ./src ./demo/src",
    "eslint:fix": "eslint --fix --ext .js,.jsx  ./src ./demo/src",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server",
    "preversion": "yarn run test && yarn run eslint",
    "prepublish": "yarn run build",
    "postpublish": "git push --all origin && git push origin --tags"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "recompose": "^0.30.0"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@size-limit/preset-small-lib": "^4.4.2",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^7.0.2",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^4.0.2",
    "jasmine": "^3.3.0",
    "karma-jasmine": "^2.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "size-limit": "^4.4.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "author": "Alexander Demin <bouvens@gmail.com> (https://bouvens.github.io/)",
  "homepage": "https://github.com/bouvens/state-control#readme",
  "license": "MIT",
  "repository": "github:bouvens/state-control",
  "keywords": [
    "react",
    "react-component",
    "npm",
    "component-library",
    "state-management",
    "presets"
  ]
}
