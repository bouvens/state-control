{
  "name": "state-control",
  "version": "2.0.5",
  "description": "Small npm package for simple changing state of React components",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "size-limit": [
    {
      "path": "lib/index.js"
    }
  ],
  "scripts": {
    "start": "nwb serve-react-demo",
    "build": "nwb build-react-component",
    "deploy": "yarn run build && yarn run deploy:upload",
    "deploy:upload": "gh-pages -d demo/dist",
    "clean": "nwb clean-module && nwb clean-demo",
    "size": "size-limit",
    "eslint": "eslint --ext .js,.jsx -f checkstyle -o ./reports/js.checkstyle.xml ./src",
    "eslint:html": "eslint --ext .js,.jsx -f html -o ./reports/eslint.checkstyle.html ./src",
    "eslint:fix": "eslint --fix --ext .js,.jsx  ./src",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server",
    "preversion": "yarn run test && yarn run eslint",
    "prepare": "yarn run build",
    "prepublishOnly": "git push --all origin && git push origin --tags && yarn run deploy:upload"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "recompose": "^0.30.0"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.4.5",
    "babel-eslint": "^10.0.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "gh-pages": "^2.0.1",
    "jasmine": "^3.3.0",
    "karma-jasmine": "^3.1.1",
    "nwb": "0.24.5",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "size-limit": "^4.4.5"
  },
  "author": "Alexander Demin <bouvens@gmail.com> (https://bouvens.github.io/)",
  "homepage": "https://github.com/bouvens/state-control#readme",
  "license": "MIT",
  "repository": "github:bouvens/state-control",
  "keywords": [
    "react",
    "react-component",
    "npm",
    "component-library",
    "state-management",
    "presets"
  ]
}
