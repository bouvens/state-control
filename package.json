{
  "name": "state-control",
  "version": "2.1.2",
  "description": "Small npm package for simple changing state of React components",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "size-limit": [
    {
      "path": "lib/index.js"
    }
  ],
  "scripts": {
    "start": "nwb serve-react-demo",
    "build": "nwb build-react-component",
    "deploy": "npm run build && npm run deploy:upload",
    "deploy:upload": "gh-pages -d demo/dist",
    "clean": "nwb clean-module && nwb clean-demo",
    "size": "size-limit",
    "eslint": "eslint --ext .js,.jsx ./src ./demo/src",
    "eslint:html": "eslint --ext .js,.jsx -f html -o ./reports/eslint.checkstyle.html ./src ./demo/src",
    "eslint:fix": "eslint --fix --ext .js,.jsx  ./src ./demo/src",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server",
    "preversion": "npm run test && npm run eslint",
    "prepare": "npm run build",
    "prepublishOnly": "git push --all origin && git push origin --tags && npm run deploy:upload"
  },
  "dependencies": {
    "prop-types": "^15.6.0"
  },
  "peerDependencies": {
    "react": "17.x"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.3",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-eslint": "^10.0.1",
    "enzyme": "^3.2.0",
    "eslint": "^7.32.0",
    "eslint-config-air": "^0.5.0",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-react": "^7.25.1",
    "gh-pages": "^3.2.3",
    "jasmine": "^3.9.0",
    "karma-jasmine": "^4.0.1",
    "nwb": "0.25.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^5.0.3"
  },
  "author": "Alexander Demin <bouvens@gmail.com> (https://bouvens.github.io/)",
  "homepage": "https://github.com/bouvens/state-control#readme",
  "license": "MIT",
  "repository": "github:bouvens/state-control",
  "keywords": [
    "react",
    "react-component",
    "npm",
    "component-library",
    "state-management",
    "presets"
  ]
}
